<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1.34"
      android:baselineAligned="false"
      android:orientation="horizontal">

    <LinearLayout
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:layout_weight="1"
	android:orientation="vertical">

      <org.billthefarmer.tuner.Scope
	  android:id="@+id/scope"
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:layout_weight="0.32"
	  android:layout_marginTop="8dp"
	  android:layout_marginLeft="8dp"
	  android:layout_marginRight="8dp"
	  android:layout_marginBottom="8dp" />
      <org.billthefarmer.tuner.Display
	  android:id="@+id/display"
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:layout_weight="1.02"
	  android:layout_marginLeft="8dp"
	  android:layout_marginRight="8dp"
	  android:layout_marginBottom="8dp" />
    </LinearLayout>

    <LinearLayout
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:layout_weight="1"
	android:orientation="vertical">

      <org.billthefarmer.tuner.Spectrum
	  android:id="@+id/spectrum"
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:layout_weight="0.32"
	  android:layout_marginTop="8dp"
	  android:layout_marginLeft="8dp"
	  android:layout_marginRight="8dp"
	  android:layout_marginBottom="8dp" />
      <org.billthefarmer.tuner.Strobe
	  android:id="@+id/strobe"
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:layout_weight="0.44"
	  android:layout_marginLeft="8dp"
	  android:layout_marginRight="8dp" />
      <View
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:layout_weight="0.06" />
      <org.billthefarmer.tuner.Meter
	  android:id="@+id/meter"
	  android:layout_width="match_parent"
	  android:layout_height="0dp"
	  android:layout_weight="0.52"
	  android:layout_marginLeft="8dp"
	  android:layout_marginRight="8dp"
	  android:layout_marginBottom="8dp" />
    </LinearLayout>
  </LinearLayout>

  <org.billthefarmer.tuner.Status
      android:id="@+id/status"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.06" />
</LinearLayout>
